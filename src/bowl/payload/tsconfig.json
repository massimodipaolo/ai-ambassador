{
  "extends": "@websolutespa/tsconfig/tsreact.json",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": false,
    "paths": {
      "payload/generated-types": [
        "./src/payload-types.ts",
      ],
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true,
  }
}
